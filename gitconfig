[user]
  name = Mladen Stepanic
  email = crawleyprint@gmail.com

[core]
  editor = vim
  excludesfile = /Users/localadmin/.gitignore_global

[color]
  ui = auto

[githubalias]
  tree = log --graph --pretty=oneline --abrev-commit

[push]
  default = matching

[alias]
  co = checkout
  st = status -sb
  conflicting = diff --name-only --diff-filter=U
  difw = diff --word-diff
  amend = commit --amend -C HEAD
  ls = log --pretty=format:\"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]\" --decorate --date=short

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = red
  untracked = cyan

[difftool]
  prompt = false

[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
